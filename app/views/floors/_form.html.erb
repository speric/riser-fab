<%= form_for(@floor, :url => project_floors_path(params[:project_id]), :html => {:class => "form-horizontal"}) do |f| %>
  <fieldset>
    <% if @floor.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@floor.errors.count, "error") %> prohibited this floor from being saved:</h2>

        <ul>
        <% @floor.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="control-group">
      <%= f.label :floor_number, :class => "control-label" %>
      <div class="controls"><%= f.number_field :floor_number, :class => 'text_field' %></div>
    </div>
    <div class="control-group">
      <%= f.label :slab_thickness, :class => "control-label" %>
      <div class="controls"><%= f.number_field :slab_thickness, :class => 'text_field' %></div>
    </div>
    <div class="control-group">
      <%= f.label :ceiling_height, :class => "control-label" %>
      <div class="controls"><%= f.number_field :ceiling_height, :class => 'text_field' %></div>
    </div>
    <%= f.hidden_field :project_id, :value => params[:project_id] %>
    <div class="form-actions">
       <%= f.submit 'Add Floor', :class => 'btn btn-primary' %>
    </div> 
  </fieldset>
<% end %>